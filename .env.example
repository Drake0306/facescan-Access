# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=facescan_db
DB_USER=facescan_user
DB_PASSWORD=your_secure_password_here

# PostgreSQL Admin
PGADMIN_EMAIL=admin@facescan.local
PGADMIN_PASSWORD=admin_password_here

# Backend API
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_jwt_secret_key_change_this_in_production
API_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Face Recognition Service
FACE_SERVICE_HOST=0.0.0.0
FACE_SERVICE_PORT=8001
FACE_RECOGNITION_THRESHOLD=0.6
FACE_DETECTION_MODEL=hog  # Options: hog, cnn
FACE_ENCODING_MODEL=large  # Options: small, large

# Camera Configuration
# Entry Camera (RTSP URL or device index)
ENTRY_CAMERA_TYPE=rtsp  # Options: rtsp, webcam
ENTRY_CAMERA_RTSP=rtsp://192.168.1.100:554/stream
ENTRY_CAMERA_INDEX=0
ENTRY_CAMERA_NAME=Entry Gate

# Exit Camera
EXIT_CAMERA_TYPE=rtsp
EXIT_CAMERA_RTSP=rtsp://192.168.1.101:554/stream
EXIT_CAMERA_INDEX=1
EXIT_CAMERA_NAME=Exit Gate

# Camera Settings
CAMERA_FPS=10
CAMERA_RESOLUTION_WIDTH=1920
CAMERA_RESOLUTION_HEIGHT=1080
CAMERA_RECONNECT_DELAY=5

# Gate Controller
GATE_CONTROLLER_TYPE=mock  # Options: http, serial, gpio, mock
GATE_CONTROLLER_HOST=192.168.1.50
GATE_CONTROLLER_PORT=80
GATE_CONTROLLER_SERIAL_PORT=COM3
GATE_CONTROLLER_BAUD_RATE=9600
GATE_OPEN_DURATION=5  # seconds

# Image Processing
NIGHT_MODE_THRESHOLD=50  # Brightness threshold for night mode
IMAGE_QUALITY=95
ENABLE_FACE_ALIGNMENT=true
ENABLE_FACE_ENHANCEMENT=true

# Storage
VISITOR_PHOTOS_PATH=./data/visitor-photos
SNAPSHOT_PATH=./data/snapshots
FACE_EMBEDDINGS_PATH=./data/embeddings

# Data Retention
DEFAULT_LOG_RETENTION_DAYS=90
DEFAULT_PHOTO_RETENTION_DAYS=180
AUTO_CLEANUP_ENABLED=true
CLEANUP_SCHEDULE_CRON=0 2 * * *  # Run at 2 AM daily

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_DELAY=5

# Performance
MAX_FACE_PROCESSING_QUEUE=100
FACE_DETECTION_INTERVAL=0.1  # seconds between detections
ENABLE_GPU=false

# Notifications
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SOUND_ENABLED=true

# Development
DEBUG=false
RELOAD=false
MOCK_HARDWARE=true
